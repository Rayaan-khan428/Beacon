{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "BeaconParameterStoreAccess",
      "Effect": "Allow",
      "Action": [
        "ssm:PutParameter",
        "ssm:GetParameter",
        "ssm:GetParameters",
        "ssm:GetParametersByPath",
        "ssm:DeleteParameter",
        "ssm:DescribeParameters"
      ],
      "Resource": ["arn:aws:ssm:us-east-1:629664187828:parameter/beacon/*"]
    },
    {
      "Sid": "ListParameters",
      "Effect": "Allow",
      "Action": ["ssm:DescribeParameters"],
      "Resource": "*"
    }
  ]
}
